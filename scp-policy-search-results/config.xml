<widget>
	<type>pactResponseLayout</type>
	<parameters>
		<xsl>scp-policy-search-results</xsl>
		<pactrequest><![CDATA[<pactrequest>
						<target>
							<SelectTimeSpanEntity>
								<quickSearch><value>{searchValue}</value><comparison>startsWith</comparison></quickSearch>
							</SelectTimeSpanEntity>
						</target>
						<context>
                            <locale>
                                <language>en</language>
                                <country>GB</country>
                            </locale>
                            <actor><actorUid>123</actorUid></actor>
                            <party><partyUid>123</partyUid></party>
                            <sessionId>{sessionId}</sessionId>
                            <dateFormat>dd/MM/yyyy</dateFormat>
                        </context>
						<timepoint>
							<effectivetime>now</effectivetime>
							<physicaltime>now</physicaltime>
						</timepoint>
						<return>
							<name>asIdentifiedEntity</name>
							<params><descriptionPattern>{description} ({status})|{entityType}|{status}</descriptionPattern></params>
						</return>
					</pactrequest>]]></pactrequest>
	</parameters>
	<attributes>
		<js>scp-policy-search-results.js</js>
		<delayLoad>true</delayLoad>
	</attributes>
	<filters>
		<filter>
			<attributes>
				<name>valueInjector</name>
				<htmlTemplate>scp-policy-search-results.html</htmlTemplate>
			</attributes>
		</filter>
	</filters>
</widget>
